<Alloy>
	<Window class="container" modal="true" layout="vertical">
		<View id="titleBar" height="35dip" backgroundColor="black">
			<Label class="title" left="10dip">
				Customize Learning
			</Label>
			
			<Button onClick="closeWindow" right="10dip">
				Done
			</Button>
		</View>
		
		<Label id="hint" textAlign="center">
			Input the ages of the people in your group to filter the component content by age.
		</Label>
		<Button id="toggleAll" onClick="checkAll" right="10dip">Uncheck All</Button>
		<TableView>
			<TableViewSection id="filters"/>
		</TableView>
	</Window>
</Alloy>

