<Alloy>
	<Window id="postlanding" class="container" backgroundColor='#FFFFFF'>
		<View layout="vertical">
			<Widget src="navigationBar" id="navBar"/>
			<ScrollView id="scroller">
				<TableView id="tableView" ></TableView>
				<!-- <View id="seeMoreCommentsView">
				<TableView id="seeMoreCommentsTableView" >
				</TableView>
				</View> -->
				<View id="addNewCommentContainer"></View>
				<View id="whiteCommentBox">
					<View id="submitCommentFormView">
						<TextField id="insertName" />
						<Label id="insertNameDisclaimer">Name is optional - Won't be shared publicly</Label>
						<TextField id="insertEmail" />
						<Label id="insertEmailDisclaimer">Email is optional - Won't be shared publicly</Label>
						<TextArea id="insertComment"/>
						<Button id="submitButton" onClick="verifyAndValidataData" />
					</View>
					<View id="thankYouMessageView">
						<Label class="thankYouMessageComment" top="35%">Thank you.</Label>
						<Label class="thankYouMessageComment" top="40%">Your message has been submitted.</Label>
						<Label class="thankYouMessageComment" top="50%">Your comment will be visible upon approval.</Label>
					</View>
					<Label id="submitYourCommentLabel">Submit your comment</Label>
					<Label id="closeCommentBoxButton">X</Label>
				</View>
			</ScrollView>
		</View>
	</Window>
</Alloy>