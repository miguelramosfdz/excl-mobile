<Alloy>
	<Window class="container" backgroundColor='#FFFFFF'>
		<View layout="vertical">
			<Widget src="navigationBar" id="navBar"/>
			<ScrollView id="scroller">
				<TableView id="sortBar" class="sortBar">
					<TableViewRow>
						<Label id="sortIndicator" class="indicator"/>
						<Switch id="sortSwitch" class= "switch" />
					</TableViewRow>
				</TableView>
				<TableView id="tableView" class="tableView"/>
			</ScrollView>
		</View>
	</Window>
</Alloy>