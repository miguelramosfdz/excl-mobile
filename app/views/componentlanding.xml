<Alloy>
	<Window class="container" backgroundColor='#FFFFFF'>
		<View layout="vertical">
			<Widget src="navigationBar" id="navBar"/>
			<ScrollView id="scroller">
				<TableView class="bfaBar">
					<TableViewRow>
						<Label id="bfaIndicator"/>
						<Switch id="bfaSwitch" class= "switch" onChange="checkStateOfSwitch"/>
					</TableViewRow>
				</TableView>
				<TableView id="tableView" class="tableView"/>
			</ScrollView>
		</View>
	</Window>
</Alloy>