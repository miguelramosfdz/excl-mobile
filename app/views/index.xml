<Alloy>
	<Window class="container">
		<View id="mainView">
			<ScrollView id="exhibitInfoScrollView" scrollType="vertical" layout="vertical" contentWidth="100%">
				<Widget src="navigationBar" id="navBar"/>
				<ScrollableView id="exhibitsCarousel">
					<View id="placeholder" height='180dip'></View>
				</ScrollableView>
				<View id = "headingRow" class="headingRow">
					<Label id="exhibitSelectLabel" class="headingText">Click Image To Select!</Label>
					<Button id="expanderButton"></Button>
				</View>
				<View id="collapsibleInfoView">
					<ScrollView id="componentScrollView"></ScrollView>
				</View>
				<View id="exhibitInfoView" layout='vertical'>
					<Label id="collapsibleInfoLabel"></Label>
					<Label id="exhibitInfoLabel"></Label>
				</View>
			</ScrollView>
		</View>	
	</Window>
</Alloy>
