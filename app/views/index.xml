<Alloy>
	<Window class="container">
		<View id="mainView">
			<Widget id="navBar" src="navigationBar"/>
			<ScrollView id="exhibitInfoScrollView">
				<ScrollableView id="exhibitsCarousel">
					<View id="placeholder" height='180dip'></View>
				</ScrollableView>
				<View id="collapsibleComponentView">
					<ScrollView id="componentScrollView"></ScrollView>
				</View>
				<View id="exhibitInfoView">
					<Label id="collapsibleInfoLabel"></Label>
					<Label id="exhibitInfoLabel"></Label>
				</View>
			</ScrollView>
		</View>
		<View id="bottomButtonContainer">
			<View id="exhibitSelect">
				<Label id="exhibitSelectLabel" class="headingText">Explore This Exhibit!</Label>
			</View>
		</View>
	</Window>
</Alloy>
