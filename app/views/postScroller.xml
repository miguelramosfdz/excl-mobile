<Alloy>
	<Collection src="post" instance="true" id="posts" />
	
	<View class="container" layout="vertical">
		<Label id="sectionTitle">section title</Label>
		
		<ScrollableView dataCollection="$.posts">
			<View>
				<ImageView id="postImage" image="{image}"/>
			
				<View id="postTitleBar">
					<Label id="postTitle" text="{name}"/>
				</View>
			</View>
		</ScrollableView>
	</View>
</Alloy>

