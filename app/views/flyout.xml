<Alloy>
	<View id="menuView">
		<!-- <View id="menuTopBar"/> -->
		<View class="clearPageProtecterView" onClick="closeMenu"/>
		<TableView class="menuTable" id="menuTable" onLoad="init">
			<TableViewRow class="tableRow" id="row1" onClick="openExhibitPage">
				<View id="rowContainer">
					<ImageView id="rowExhibit" backgroundImage= "/flyoutMenuIcons/exhibit.png" class="rowIcon" />
					<Label id="exhibitLabel" class="rowLabel">Exhibits</Label>
				</View>
			</TableViewRow>
			<TableViewRow class="tableRow" id="row2" onClick="bestForAgesHandler">
				<View id="rowContainer">
					<View backgroundImage="/flyoutMenuIcons/ages.png" class="rowIcon"/>
					<Label id="agesLabel" class="rowLabel">Filter by Age</Label>
				</View>
			</TableViewRow>
			<TableViewRow class="tableRowCollapsible" id="tableRowCollapsible">
				<View id="rowContainerIndented">
					<View backgroundImage="/flyoutMenuIcons/edit.png" class="rowIcon" onClick="openInputMenu"/>
					<Label class="rowLabelIndented">Edit My Ages</Label>
				</View>
			</TableViewRow>
			<TableViewRow class="tableRow" id="row4">
				<View id="rowContainer">
					<View backgroundImage="/flyoutMenuIcons/favorites.png" class="rowIcon"/>
					<Label id="favoritesLabel" color="red" class="rowLabel">My Favorites</Label>
				</View>
			</TableViewRow>
			<TableViewRow class="tableRow" id="row5">
				<View id="rowContainer">
					<View backgroundImage= "/flyoutMenuIcons/map.png" class="rowIcon"/>
					<Label id="mapLabel" color="red" class="rowLabel">Map</Label>
				</View>
			</TableViewRow>
			<TableViewRow class="tableRow" id="row6">
				<View id="rowContainer">
					<View backgroundImage="/flyoutMenuIcons/info.png" class="rowIcon"/>
					<Label id="museumInfoLabel" color="red" class="rowLabel">Museum Info</Label>
				</View>
			</TableViewRow>
			<TableViewRow class="tableRow" id="row7">
				<View id="rowContainer">
					<View backgroundImage="/flyoutMenuIcons/tutorial.png" class="rowIcon"/>
					<Label id="tutorialLabel" color="red" class="rowLabel">Tutorial</Label>
				</View>
			</TableViewRow>
			<TableViewRow class="tableRow" id="row8">
				<View id="rowContainer">
					<View backgroundImage="/flyoutMenuIcons/settingsGear.png" class="rowIcon"/>
					<Label id="settingsLabel" color="red" class="rowLabel">Settings</Label>
				</View>
			</TableViewRow>
		</TableView>
	</View>
</Alloy>
