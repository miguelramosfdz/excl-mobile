<Alloy>
	<Window class="container">
		<View class="verticalContainer">
			<Label class="title">Choose your Wordpress Environment</Label>		
			<Button class="environmentOption" onClick="enterProductionMode">Production</Button>		
			<Button class="environmentOption" onClick="enterQualityAssuranceMode">Quality Assurance</Button>
			<Button class="environmentOption" onClick="enterDevelopmentMode">Development</Button>
			<Button class="environmentOption" onClick="enterOtherMode">Other</Button>
			<View class="horizontalContainer">
				<Label>Toggle Unpublished Posts</Label>
				<Switch id="toggleUnpublishedPostsSwitch"/>
			</View>
		</View>
	</Window>
</Alloy>